<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= link_to 'Show', idea, { :class=>"btn btn-primary" } %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea), { :class=>"btn btn-primary" } %></td>
        <td><%= link_to 'Destroy', idea, :class=>"btn btn-danger",method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path, { :class=>"btn btn-primary" } %>
